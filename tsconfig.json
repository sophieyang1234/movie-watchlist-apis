{
  "compilerOptions": {
    "experimentalDecorators": true,
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "incremental": true,
    "target": "es2018",
    "module": "commonjs",
    "removeComments": true,
    "inlineSourceMap": true,
    "strictBindCallApply": true,
    "lib": [
      "es2017"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}
